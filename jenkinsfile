pipeline {
	Agent any
  	environment{
    		PATH= /opt/apache-maven-3.6.3/bin:$PATH
  	}
	stages{
		stage("git"){
      			steps{
				echo("Cloning Git hub jenkins file")
				git credentialsId: 'git_credentials', url: 'https://github.com/squad12-devops/case-study/blob/main/jenkinsfile'
        		}
		}
		stage("Static Code Analysis"){
      			steps{
				echo("validating project")
				sh "mvn validate"
        		}
		}
    		stage("Compile"){
      			steps{
				echo("compiling project")
				sh "mvn compile"
        		}
		}
    		stage("Build"){
      			steps{
				echo("build package")
				sh "mvn package"
        		}
		}
	}

}
